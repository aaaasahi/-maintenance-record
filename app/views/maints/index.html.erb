<div class="container">
  <h1 class="text-center mb-5">メンテナンス一覧</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">機種</th>
        <th scope="col">メンテナンス内容</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <form class="search-box">
      <div class="form-row">
        <%= search_form_for @q do |f| %>
          <div class="form-group col-md-5">
            <%= f.search_field :game_cont, class:"form-control" , placeholder: "機種で検索" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.search_field :content_cont, class: "form-control", placeholder: "メンテナンス内容で検索" %>
          </div>
          <div class="col-md-1" >
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
          <% end %>
      </div>
    </form>
    <tbody>
      <% @maints.each do |maint,i| %>
        <tr>
          <td><%= maint.game %></td>
          <td><%= maint.content %></td>
          <td>
            <%= link_to "詳細", maint_path(maint) %>
            <%= link_to "編集", edit_maint_path(maint) %>
            <%= link_to "削除", maint_path(maint), method: :delete, data: {confirm: "削除しますか?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>