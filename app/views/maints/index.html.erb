<div class="container">
  <h1 class="text-center mb-4">メンテナンス一覧</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="d-flex">
        <th scope="col" class="col-md-2">機種</th>
        <th scope="col" class="col-md-5">メンテナンス内容</th>
        <th scope="col" class="col-md-2">メンテナンス日</th>
        <th scope="col" class="col-md-3"></th>
      </tr>
    </thead>
    <form class="search-box">
      <div class="form-row">
        <%= search_form_for @q do |f| %>
          <div class="form-group col-md-4">
            <%= f.search_field :game_cont, class:"form-control" , placeholder: "機種で検索" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.search_field :content_cont, class: "form-control", placeholder: "メンテナンス内容で検索" %>
          </div>
          <div class="col-md-1" >
            <%= f.submit "検索", class: "btn  btn-outline-dark" %>
          </div>
          <div class="form-group col-md-2">
            <%= sort_link(@q, :created_at, "日付新しい順", { default_order: :desc }) %>
          </div>
          <% end %>
      </div>
    </form>
    <tbody>
      <% @maints.each do |maint| %>
        <tr class="d-flex">
          <td class="col-md-2"><%= maint.game %></td>
          <td class="col-md-5"><%= maint.content %></td>
          <td class="col-md-2">
            <%= maint.display_created_at %>
          </td>
          <td class="d-flex justify-content-around col-md-3">
            <%= link_to "詳細", maint_path(maint),class: "btn btn-primary" %>
            <%= link_to "編集", edit_maint_path(maint),class: "btn btn-success" %>
            <%= link_to "削除", maint_path(maint), class: "btn btn-danger",method: :delete, data: {confirm: "削除しますか?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>