<div class="container">
  <h1 class="text-center mb-5">エラー編集</h1>
  <ul>
    <% @error.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_with(model: @error, local: true) do |f| %>
    <div>
      <%= f.label :game, '機種名' %>
    </div>
    <div>
      <%= f.text_field :game, class: 'text' %>
    </div>
    <div>
      <%= f.label :problem, 'エラー内容' %>
    </div>
    <div>
      <%= f.text_area :problem %>
    </div>
    <div>
      <%= f.label :approach, 'どう対処したか' %>
    </div>
    <div>
      <%= f.text_area :approach %>
    </div>
    <div>
      <%= f.label :name, '担当者' %>
    </div>
    <div>
      <%= f.text_field :name, class: 'text' %>
    </div>
    <%= f.submit '記録する', class: 'btn-primary' %>
  <% end %>
</div>