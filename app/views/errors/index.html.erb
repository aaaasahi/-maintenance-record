<div class="container">
  <h1 class="text-center mb-4">エラー一覧</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="d-flex">
        <th scope="col" class="col-md-2">機種</th>
        <th scope="col" class="col-md-7">エラー内容</th>
        <th scope="col" class="col-md-3"></th>
      </tr>
    </thead>
        <form class="search-box">
          <div class="form-row">
            <%= search_form_for @q do |f| %>
              <div class="form-group col-md-5">
                <%= f.search_field :game_cont, class:"form-control" , placeholder: "機種で検索" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.search_field :problem_cont, class: "form-control", placeholder: "エラーで検索" %>
              </div>
              <div class="col-md-1" >
                <%= f.submit "検索", class: "btn btn-outline-dark" %>
              </div>
              <% end %>
          </div>
        </form>
    <tbody>
      <% @errors.each do |error| %>
        <tr class="d-flex">
          <td class="col-md-2" ><%= error.game %></td>
          <td class="col-md-7"><%= error.problem %></td>
          <td class="d-flex justify-content-around col-md-3">
            <%= link_to "詳細", error_path(error),class: "btn btn-primary" %>
            <%= link_to "編集", edit_error_path(error),class: "btn btn-success" %>
            <%= link_to "削除", error_path(error),class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>